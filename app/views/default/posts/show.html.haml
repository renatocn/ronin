= render :layout => "layouts/public", :locals => {:title => @post.title} do
  .post
    %h2= @post.title
    = render "shared/header_post", :post => @post
    .body= raw @post.body.to_html
    .tags 
      - @post.tags.map do |tag| 
        = link_to tag.name, tags_path(tag.name)
    .comments= raw disqus_thread
